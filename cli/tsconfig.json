{
  "compilerOptions": {
    "target": "es2018",
    "module": "CommonJS",
    "lib": ["DOM", "es2021"],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./out",
    "rootDir": "./src",
    "strict": false,
    "allowJs": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
